<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enferia.Views"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="Enferia.Views.LoginPageView"
        mc:Ignorable="d"
        Height="300" Width="360">
    <Grid>
        <Label x:Name="login_Label" Content="Login:" HorizontalAlignment="Left" Height="30" Margin="5,20,0,0" VerticalAlignment="Top" Width="70"/>
        <Label x:Name="password_Label" Content="Hasło:" HorizontalAlignment="Left" Height="30" Margin="5,70,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="login_TextBox" Text="{Binding login_TextBox}" HorizontalAlignment="Left" Height="30" Margin="100,20,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="160"/>
        <TextBox x:Name="password_TextBox" Text="{Binding password_TextBox}" HorizontalAlignment="Left" Height="30" Margin="100,70,0,0"  VerticalAlignment="Top" Width="160"/>
        <Button x:Name="login_Button"  Content="Zaloguj do gry"  HorizontalAlignment="Left" Height="40" Margin="100,120,0,0" VerticalAlignment="Top" Width="160" />
    </Grid>
</UserControl>
