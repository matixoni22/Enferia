<UserControl x:Class="Enferia.Views.StartUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Enferia.Views"
             mc:Ignorable="d" 
             Height="365" Width="600">
    <Grid Background="DarkGreen" Margin="0,0,-15,-85">
        <ContentControl x:Name="ActiveItem"/>
        
        <Button x:Name="registryPage_Button" Content="Rejestracja" HorizontalAlignment="center" VerticalAlignment="Top" Width="90" Height="40" Margin="-200,0,0,0"/>
        <Button x:Name="loginPage_Button" Content="Logowanie" HorizontalAlignment="center" VerticalAlignment="Top" Width="90" Height="40" Margin="0,0,0,0"/>
        <Button x:Name="aboutPage_Button" Content="O mnie" HorizontalAlignment="center" VerticalAlignment="Top" Width="90" Height="40" Margin="200,0,0,0"/>
    </Grid>
</UserControl>
